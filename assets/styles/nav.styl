// 1. DEFAULT CSS from unminified 'vue-stripe-menu/dist/vue-stripe-menu.css'
// 2. DEMO CSS from https://alexeykhr.github.io/vue-stripe-menu/#example
// 3. CUSTOM CSS

/* DEFAULT CSS */
.vsm-menu
  perspective 2000px

.vsm-menu .graphics
  display flex
  justify-content center
  position relative
  z-index 0

  &__item
    height auto
    margin-top calc(-1 * var(--spacing-8))
    max-width 12rem

.vsm-menu .vsm-dropdown
  position absolute
  z-index 1000
  left 0
  right 0
  top $navbar-height
  pointer-events none
  -webkit-transform rotateX(-15deg)
  transform rotateX(-15deg)
  -webkit-transform-origin 50% (-$navbar-height)
  transform-origin 50% (-$navbar-height)
  opacity 0
  will-change transform, opacity
  -webkit-transition-property opacity, -webkit-transform
  transition-property opacity, -webkit-transform
  transition-property transform, opacity
  transition-property transform, opacity, -webkit-transform
  -webkit-transition-duration 0.25s
  transition-duration 0.25s

.vsm-menu.vsm-dropdown-active .vsm-dropdown
  opacity 1
  pointer-events auto
  -webkit-transform none
  transform none

.vsm-menu.vsm-dropdown-active .vsm-dropdown-section.vsm-active
  pointer-events auto

.vsm-root
  padding 0
  margin 0

.vsm-section
  display flex
  align-items center
  list-style none

.vsm-section_menu a
  text-decoration none
  -webkit-tap-highlight-color transparent

.vsm-section_menu button
  background none
  border none
  outline none

.vsm-link
  display inline-block
  white-space nowrap
  user-select none
  margin 0
  padding 0 10px
  color currentColor
  transition color 0.1s ease

.vsm-link.vsm-active,
.vsm-link:hover
  color var(--link-hover)

.vsm-link > *
  position relative
  display block

.vsm-background,
.vsm-background-alt
  position absolute
  top 0
  left 0
  will-change transform
  transition-property -webkit-transform
  transition-property transform
  transition-property transform, -webkit-transform
  transition-duration 0.25s

.vsm-background
  background var(--fg)
  border-radius $border-radius-6
  overflow hidden
  box-shadow 0 50px 100px -20px rgba(50, 50, 93, 0.25), 0 30px 60px -30px rgba(0, 0, 0, 0.3), 0 -18px 60px -10px rgba(0, 0, 0, 0.025)
  width 380px
  height 400px
  transform translateX(0)
  transform-origin 0 0

.vsm-background-alt
  right 0
  height 1000px
  background var(--trans-gray-900)

.vsm-arrow,
.vsm-dropdown-container
  position absolute
  left 0
  transition-duration 0.25s

.vsm-arrow
  top -6px
  margin 0 0 0 -6px
  width 12px
  height 12px
  transform rotate(45deg)
  border-radius 4px 0 0 0
  background var(--fg)
  box-shadow -3px -3px 5px rgba(82, 95, 127, 0.04)
  will-change transform
  transition-property -webkit-transform
  transition-property transform
  transition-property transform, -webkit-transform
  pointer-events none

.vsm-dropdown-container
  overflow hidden
  width 500px
  top 0
  transform translateX(0)
  will-change transform, width, height
  border-radius $border-radius-6
  transition-property width, height, -webkit-transform
  transition-property transform, width, height
  transition-property transform, width, height, -webkit-transform

.vsm-dropdown-section
  opacity 0
  pointer-events none
  will-change transform, opacity
  transition-property transform, opacity
  transition-property transform, opacity, -webkit-transform
  transition-duration 0.25s

.vsm-dropdown-section.vsm-active
  opacity 1
  transform translateX(0)

.vsm-dropdown-section.vsm-left
  transform translateX(-150px)

.vsm-dropdown-section.vsm-right
  transform translateX(150px)

.vsm-dropdown-content
  position absolute
  top 0
  left 0

.vsm-section_mob
  display none
  margin-right calc(-1 * var(--spacing-4))

.vsm-mob
  padding var(--spacing-4)

.vsm-section_mob.vsm-open .vsm-mob
  pointer-events none

.vsm-mob__hamburger,
.vsm-section_mob.vsm-open .vsm-mob-content
  display flex

.vsm-mob__hamburger
  display flex
  flex-direction column
  justify-content center
  align-items center
  width 1.5rem
  height 1.5rem
  pointer-events none
  &:before,
  &:after
    content ""
    display block
    height 1px
    width 100%
    background-color currentColor
    transition transform .2s $ease-out
  &:before
    transform translateY(-4px) rotate(0deg)
  &:after
    transform translateY(4px) rotate(0deg)
