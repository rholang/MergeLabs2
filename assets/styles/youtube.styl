lite-youtube:hover > .lty-playbtn,
lite-youtube .lty-playbtn:focus
  filter none

/* Post-click styles */
lite-youtube.lyt-activated
  cursor unset

lite-youtube.lyt-activated::before,
lite-youtube.lyt-activated > .lty-playbtn
  opacity 0
  pointer-events none

.lyt-visually-hidden
  clip rect(0 0 0 0)
  clip-path inset(50%)
  height 1px
  overflow hidden
  position absolute
  white-space nowrap
  width 1px