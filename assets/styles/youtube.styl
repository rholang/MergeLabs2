lite-youtube
  background-color transparent
  position relative
  display block
  contain content
  background-position center center
  background-size cover
  cursor pointer
  border-radius $border-radius-6

/* 
  responsive iframe with a 16:9 aspect ratio
  thanks https://css-tricks.com/responsive-iframes/
*/
lite-youtube::after
  content ""
  display block
  padding-bottom calc(100% / (16 / 9))

lite-youtube > iframe
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  border 0
  border-radius $border-radius-6 // safari

/* play button */
